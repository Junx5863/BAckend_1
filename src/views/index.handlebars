<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Lista de Juegos Creados</h1>
        <button class="btn btn-primary" data-toggle="modal" data-target="#addGameModal">Añadir Juego</button>
    </div>
    <div class="row">
    {{#each videoGamesPath}}
    <div class="col-md-4 mb-4">
        <div class="card">
  <div class="card-body">
    <h5 class="card-title">{{this.title}}</h5>
    <p class="card-text">
      <strong>Plataforma:</strong> {{this.platform}}<br>
      <strong>Precio:</strong> ${{this.price}}<br>
      <strong>Fecha de Lanzamiento:</strong> {{this.release_date}}<br>
      <strong>Género:</strong> {{this.genre}}<br>
      <strong>Descripción:</strong> {{this.description}}<br>
      <strong>Estado:</strong> {{this.status}}<br>
      <strong>Stock:</strong> {{this.stock}}
    </p>
    <div class="input-group mb-3">
      <input type="number" class="form-control" id="{{this._id}}" value="1" min="1">
      <button class="btn btn-primary" onclick="addCart('{{this._id}}')">Agregar al Carrito</button>
    </div>
  </div>
</div>
    </div>
    {{/each}}
</div>

    <nav aria-label="Page navigation example">
        <div class="container mt-5">
    <div class="row">
        {{#each displayedGames}}
        <div class="col-md-4 mb-4">
            </div>
        {{/each}}
    </div>
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
            {{#if hasPrevPage}} 
            <li class="page-item">
                <a class="page-link" href="?page={{prevPage}}" >
                    <span aria-hidden="true">Preview Page</span>
                </a>
            </li>
            {{/if}}
            
            <li class="page-item ">
                <a class="page-link " href="#">Página {{currentPage}} de {{totalPages}}</a>
            </li>
            {{#if hasNextPage}}
            <li class="page-item ">
                <a class="page-link" href="/api/v1/list_games?page={{nextPage}}" >
                    Next Page
                </a>
            </li>
            {{/if}}
        </ul>
    </nav>
</div>
    </nav>
</div>

